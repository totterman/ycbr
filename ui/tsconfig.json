{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "baseUrl": ".",
     "paths": {
      "@/*": ["./src/*"]
    },
    "isolatedModules": true,
    "allowJs": false,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src", "vite.config.ts", "intlayer.config.ts"],
  "exclude": ["**/*.test.ts*"]
}